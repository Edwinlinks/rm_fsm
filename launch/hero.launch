<launch>
    <arg name="use_simulation" default="false"/>
    <arg name="load_description" default="true"/>
    <arg name="load_controller" default="true"/>
    <arg name="ekf" default="true"/>
    <arg name="odom_tf" default="true"/>
    <arg name="base_link_tf" default="true"/>
    <arg name="camera_tf" default="true"/>

    <rosparam file="$(find rm_fsm)/config/hero.yaml" command="load"/>
    <rosparam unless="$(arg use_simulation)" file="$(find rm_base)/config/hero.yaml" command="load"/>

    <include if="$(arg load_description)" file="$(find rm_description)/launch/hero.launch">
        <arg name="load_chassis" value="true"/>
        <arg name="load_gimbal" value="true"/>
        <arg name="load_shooter" value="true"/>
        <arg name="use_simulation" value="$(arg use_simulation)"/>
        <arg name="use_rm_gazebo" value="true"/>
        <arg if="$(arg use_simulation)" name="roller_type" value="simple"/>
        <arg unless="$(arg use_simulation)" name="roller_type" value="none"/>
        <arg name="paused" value="false"/>
    </include>
    <include unless="$(arg use_simulation)" file="$(find rm_base)/launch/rm_base.launch"/>

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner"
          respawn="false"
          output="screen" args="
        rm_base/robot_state_controller
        rm_base/joint_state_controller
        controllers/imu_sensor_controller
        rm_base/gimbal_standard_controller
        rm_base/chassis_standard_controller
        rm_base/shooter_standard_controller
   "/>

    <node if="$(arg ekf)" pkg="robot_localization" type="ekf_localization_node" name="ekf_localization"
          clear_params="true">
        <rosparam command="load" file="$(find rm_chassis_controllers)/config/localization.yaml"/>
    </node>
    <node if="$(arg odom_tf)" pkg="tf" type="static_transform_publisher" name=""
          args="0 0 0 0 0 0 1 map odom 100"/>
    <node if="$(arg base_link_tf)" pkg="tf" type="static_transform_publisher" name=""
          args="0 0 0 0 0 0 1 map base_link 100"/>
    <node if="$(arg camera_tf)" pkg="tf" type="static_transform_publisher" name=""
          args="0.086 0 -0.046 0.5, 0.5, 0.5, 0.5 pitch camera 100"/>

    <node name="dbus_node" pkg="rm_base" type="dbus_node" respawn="false"/>
    <node name="rm_fsm" pkg="rm_fsm" type="rm_fsm" respawn="false"/>
</launch>